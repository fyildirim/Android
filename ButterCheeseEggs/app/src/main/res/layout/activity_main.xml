<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fyildirim.buttercheeseeggs.MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/bord"
        android:stretchColumns="*"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.33">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView0"
                android:layout_row="1"
                android:layout_column="0"
                android:onClick="speel"
                android:tag="0"
                android:layout_weight="1"
                android:baselineAlignBottom="true"
                android:layout_marginTop="35dp"
                android:src="@drawable/kruisje"
                android:alpha="0" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView1"
                android:layout_row="1"
                android:layout_column="1"
                android:tag="1"
                android:layout_weight="1"
                android:layout_marginTop="35dp"
                android:onClick="speel"
                android:src="@drawable/kruisje"
                android:alpha="0" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView2"
                android:layout_row="1"
                android:layout_column="2"
                android:onClick="speel"
                android:tag="2"
                android:layout_weight="1"
                android:layout_marginTop="35dp"
                android:src="@drawable/kruisje"
                android:alpha="0" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".33">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView3"
                android:layout_row="14"
                android:layout_column="0"
                android:onClick="speel"
                android:tag="3"
                android:layout_marginTop="35dp"
                android:src="@drawable/kruisje"
                android:alpha="0" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView4"
                android:layout_row="14"
                android:layout_column="1"
                android:onClick="speel"
                android:tag="4"
                android:layout_marginTop="35dp"
                android:src="@drawable/kruisje"
                android:alpha="0" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView5"
                android:layout_row="14"
                android:layout_column="2"
                android:onClick="speel"
                android:tag="5"
                android:layout_marginTop="35dp"
                android:src="@drawable/kruisje"
                android:alpha="0" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".33">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView6"
                android:layout_row="15"
                android:layout_column="0"
                android:onClick="speel"
                android:tag="6"
                android:layout_marginTop="35dp"
                android:src="@drawable/kruisje"
                android:alpha="0" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView7"
                android:layout_row="15"
                android:layout_column="1"
                android:onClick="speel"
                android:tag="7"
                android:layout_marginTop="35dp"
                android:src="@drawable/kruisje"
                android:alpha="0" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView8"
                android:layout_row="15"
                android:layout_column="2"
                android:onClick="speel"
                android:tag="8"
                android:layout_marginTop="35dp"
                android:src="@drawable/kruisje"
                android:alpha="0" />

        </TableRow>

    </TableLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#5e8fe3ff"
        android:minWidth="300dp"
        android:minHeight="100dp"
        android:textAlignment="center"
        android:id="@+id/swag"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Play again?"
            android:id="@+id/endtekst"
            android:textAlignment="gravity"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="play again?"
            android:id="@+id/resetknop"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="10dp"
            android:onClick="reset" />
    </FrameLayout>

</RelativeLayout>
